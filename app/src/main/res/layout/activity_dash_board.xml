<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashBoard">

    <RelativeLayout
        android:background="#E7E7E7"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--Tool Bar!-->

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            app:title="Dashboard"
            android:layout_alignParentTop="true"
            android:theme="@style/MyToolbarStyle"
            app:titleTextColor="@color/white">
        </androidx.appcompat.widget.Toolbar>


        <!--Check card !-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_below="@+id/toolbar"
            android:background="@color/black"/>

        <!--Card View!-->


        <androidx.cardview.widget.CardView
            android:id="@+id/check_card"
            android:layout_marginTop="70dp"
            android:layout_width="match_parent"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:layout_height="200dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="20dp"
            android:layout_centerHorizontal="true"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">



                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_alignParentLeft="true"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="190dp"
                            android:layout_height="wrap_content"
                            android:text="Welcome Back"
                            android:textSize="20sp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/black"
                            android:textStyle="normal"
                            android:fontFamily="@font/robotoregular"/>

                        <!--For name and id !-->

                        <LinearLayout
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/empName_id"
                                android:layout_marginLeft="15dp"
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:text="Shreyash"
                                android:textSize="25sp"
                                android:textColor="@color/black"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_marginLeft="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/empID_id"
                                android:text="ID-411035"
                                android:textSize="15sp"/>

                        </LinearLayout>




                    </LinearLayout>

                    <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/profile_image"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/jenny"
                        app:civ_border_width="2dp"
                        app:civ_border_color="#FF000000"/>



                </RelativeLayout>




                <!-- Clock!-->

                <LinearLayout
                    android:layout_width="180dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/clock"
                        android:layout_marginLeft="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:id="@+id/timer"
                        android:text="09:10:25"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="#FF0000"
                        />

                </LinearLayout>


                <!-- CHeck In/Out Button!-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="120dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="30dp"
                        android:id="@+id/check_in_button"
                        android:layout_marginTop="10dp"
                        android:text="Check In"
                        android:textColor="@color/white"
                        android:background="#5FB709"/>

                    <Button
                        android:layout_width="120dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="20dp"
                        android:id="@+id/check_out_button"
                        android:layout_marginTop="10dp"
                        android:text="Check Out"
                        android:alpha="0.3"
                        android:enabled="false"
                        android:background="#FF0000"
                        android:textColor="@color/white"/>

                </LinearLayout>




            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:background="#E7E7E7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/check_card">

            <!--  Grid Layout  !-->
            <GridLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnOrderPreserved="false"
                android:alignmentMode="alignMargins"
                android:columnCount="2"
                android:rowCount="3">

                <!--  Schedule Card  !-->
                <androidx.cardview.widget.CardView
                    android:id="@+id/schedule_cardview"
                    android:layout_width="120dp"
                    android:layout_height="10dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="10dp"
                    android:elevation="6dp"
                    app:cardCornerRadius="10dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/schedule"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Schedule"
                            android:textColor="@color/black"
                            android:fontFamily="@font/sregular"
                            android:textAlignment="center"
                            android:textSize="25sp"
                            android:gravity="center_horizontal" />


                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!--  Team Card  !-->
                <androidx.cardview.widget.CardView
                    android:id="@+id/team_cardview"
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="10dp"
                    android:elevation="6dp"
                    app:cardCornerRadius="10dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/group"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Team"
                            android:textColor="@color/black"
                            android:fontFamily="@font/sregular"
                            android:textAlignment="center"
                            android:textSize="25sp"
                            android:gravity="center_horizontal" />


                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <!--  Apply Leave Card  !-->
                <androidx.cardview.widget.CardView
                    android:id="@+id/apply_leave_cardview"
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="10dp"
                    android:elevation="6dp"
                    app:cardCornerRadius="10dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/leave"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Apply leave"
                            android:textColor="@color/black"
                            android:fontFamily="@font/sregular"
                            android:textAlignment="center"
                            android:textSize="25sp"
                            android:gravity="center_horizontal" />


                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!--  Attendance Card  !-->
                <androidx.cardview.widget.CardView
                    android:id="@+id/attendance_cardview"
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="10dp"
                    android:elevation="6dp"
                    app:cardCornerRadius="10dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/attendance"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Attendance"
                            android:fontFamily="@font/sregular"
                            android:textColor="@color/black"
                            android:textAlignment="center"
                            android:textSize="25sp"
                            android:gravity="center_horizontal" />


                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <!--  Poll Card  !-->

                <androidx.cardview.widget.CardView
                    android:id="@+id/feedback_cardview"
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="10dp"
                    android:elevation="6dp"
                    app:cardCornerRadius="10dp"
                    >

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/ic_baseline_feedback_24"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Feedback"
                            android:fontFamily="@font/sregular"
                            android:textColor="@color/black"
                            android:textAlignment="center"
                            android:textSize="25sp"
                            android:gravity="center_horizontal" />


                    </LinearLayout>
                </androidx.cardview.widget.CardView>



                <!--  My Profile Card  !-->

                <androidx.cardview.widget.CardView
                    android:id="@+id/my_profile_cardview"
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="10dp"
                    android:elevation="6dp"
                    app:cardCornerRadius="10dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/pro"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="My Profile"
                            android:fontFamily="@font/sregular"
                            android:textColor="@color/black"
                            android:textAlignment="center"
                            android:textSize="25sp"
                            android:gravity="center_horizontal" />


                    </LinearLayout>
                </androidx.cardview.widget.CardView>





            </GridLayout>



        </LinearLayout>
    </RelativeLayout>
</ScrollView>